<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Rating</th>
      <th>Image Path</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content ? post.content : "No content" %></td>
        <td><%= post.rating ? post.rating : "No rating"  %></td>
        <td><%= post.image_path ? post.image_path :  "No image" %></td>
        <td><%= post.latitude ? post.latitude :  "No latitude" %></td>
        <td><%= post.longitude ? post.longitude :  "No longitude" %></td>
        <td><%= post.address ? post.address :  "No address" %></td>
        <td><%= link_to 'Show', post, remote: :true %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

